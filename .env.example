# Aether OS Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# === Required ===

# Google Gemini API key (get one at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# === Optional (defaults shown) ===

# Kernel server port
AETHER_PORT=3001

# Virtual filesystem root directory
AETHER_FS_ROOT=/tmp/aether

# JWT signing secret (auto-generated if not set)
# AETHER_SECRET=your_secret_key_here

# === Clustering (optional) ===

# Cluster role: 'standalone' (default), 'hub', or 'node'
AETHER_CLUSTER_ROLE=standalone

# Hub WebSocket URL (required when AETHER_CLUSTER_ROLE=node)
# AETHER_HUB_URL=ws://hub-host:3001/cluster

# Node hostname for hub registration
# AETHER_NODE_HOST=localhost

# Max processes per node
AETHER_NODE_CAPACITY=16

# === Auth ===

# Allow new user registration (true/false)
AETHER_REGISTRATION_OPEN=true
