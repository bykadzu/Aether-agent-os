{
  "name": "aether-os",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:kernel": "cd server && npx tsx src/index.ts",
    "dev:full": "npm run dev:kernel & npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:kernel": "vitest run --project kernel",
    "test:runtime": "vitest run --project runtime",
    "test:shared": "vitest run --project shared",
    "test:server": "vitest run --project server",
    "test:components": "vitest run --project components",
    "test:unit": "vitest run --project kernel --project runtime --project shared",
    "test:smoke": "vitest run --project server -t smoke",
    "doctor": "npx tsx scripts/doctor.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit && cd kernel && npx tsc --noEmit && cd ../runtime && npx tsc --noEmit && cd ../server && npx tsc --noEmit && cd ../shared && npx tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@monaco-editor/react": "^4.7.0",
    "@novnc/novnc": "^1.6.0",
    "@xterm/addon-fit": "^0.11.0",
    "better-sqlite3": "^12.6.2",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.9",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
